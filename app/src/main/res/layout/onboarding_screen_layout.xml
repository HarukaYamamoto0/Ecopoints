<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_onboarding_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/ic_gift" />

    <TextView
        android:id="@+id/textview_onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Ganhe prêmios"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_onboarding_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:text="Com o EcoPoints você pode ter a chance de ganhar prêmios, apenas fazendo as compras do dia a dia"
        android:textAlignment="center"
        android:textSize="18dp" />

</LinearLayout>