<resources>

    <!-- Style for the Material3 CardView used as exchange option -->
    <style name="ExchangeOptionCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Style for ImageView with rounded corners -->
    <style name="CircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
